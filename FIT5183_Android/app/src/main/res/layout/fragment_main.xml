<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"

    android:id="@+id/fragment_main"
    android:background="@drawable/background"
    android:backgroundTintMode="screen">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/home_slide"
        android:layout_gravity="right"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/mainname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello "
        android:textSize="22dp" />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.5"
        android:text="This is a very useful calorie application. It can help you to \nrecord your daily calorie.\nHopefully you enjoy it !
        \nThank you !"
        android:textIsSelectable="false"
        android:textSize="16dp"
        android:typeface="sans" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_width="63dp"
                android:layout_height="71dp"
                android:background="@drawable/fitness_2"
                />
        </LinearLayout>
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

         <TextView
             android:layout_marginTop="30dp"
             android:layout_marginLeft="40dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Developer: Wayne"
             android:layout_gravity="right|bottom" />
         <TextView
             android:id="@+id/maindate"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="40dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Date: "
             android:layout_gravity="right|bottom" />

     </LinearLayout>


    </LinearLayout>


</LinearLayout>